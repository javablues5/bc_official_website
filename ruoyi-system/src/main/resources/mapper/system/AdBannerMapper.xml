<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AdBannerMapper">
    
    <resultMap type="AdBanner" id="AdBannerResult">
        <result property="id"           column="id"           />
        <result property="title"        column="title"        />
        <result property="description"  column="description"  />
        <result property="imageUrl"     column="image_url"    />
        <result property="linkUrl"      column="link_url"     />
        <result property="position"     column="position"     />
        <result property="sortOrder"    column="sort_order"   />
        <result property="status"       column="status"       />
        <result property="openNewWindow" column="open_new_window" />
        <result property="isInner"      column="is_inner"     />
        <result property="position"    column="position"    />
        <result property="remark"       column="remark"       />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
    </resultMap>

    <sql id="selectAdBannerVo">
        select id, title, description, image_url, link_url, position, sort_order, status, 
               open_new_window, is_inner, remark, create_by, create_time, update_by, update_time 
        from sys_ad_banner
    </sql>

    <select id="selectAdBannerById" parameterType="Long" resultMap="AdBannerResult">
        <include refid="selectAdBannerVo"/>
        where id = #{id}
    </select>

    <select id="selectAdBannerList" parameterType="AdBanner" resultMap="AdBannerResult">
        <include refid="selectAdBannerVo"/>
        <where>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="position != null  and position != ''"> and position = #{position}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="isInner != null  and isInner != ''"> and is_inner = #{isInner}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
        </where>
        order by sort_order asc, create_time desc
    </select>

    <select id="selectAdBannerByPosition" parameterType="String" resultMap="AdBannerResult">
        <include refid="selectAdBannerVo"/>
        where position = #{position}
        order by sort_order asc, create_time desc
    </select>

    <select id="selectActiveAdBannerList" parameterType="AdBanner" resultMap="AdBannerResult">
        <include refid="selectAdBannerVo"/>
       where status = '0'
        order by sort_order asc, create_time desc
    </select>

    <select id="checkTitleUnique" parameterType="String" resultMap="AdBannerResult">
        <include refid="selectAdBannerVo"/>
        where title = #{title} limit 1
    </select>
        
    <insert id="insertAdBanner" parameterType="AdBanner" useGeneratedKeys="true" keyProperty="id">
        insert into sys_ad_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
            <if test="linkUrl != null">link_url,</if>
            <if test="position != null and position != ''">position,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null">status,</if>
            <if test="openNewWindow != null">open_new_window,</if>
            <if test="isInner != null">is_inner,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
         <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
            <if test="linkUrl != null">#{linkUrl},</if>
            <if test="position != null and position != ''">#{position},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null">#{status},</if>
            <if test="openNewWindow != null">#{openNewWindow},</if>
            <if test="isInner != null">#{isInner},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAdBanner" parameterType="AdBanner">
        update sys_ad_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
            <if test="linkUrl != null">link_url = #{linkUrl},</if>
            <if test="position != null and position != ''">position = #{position},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="openNewWindow != null">open_new_window = #{openNewWindow},</if>
            <if test="isInner != null">is_inner = #{isInner},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAdBannerById" parameterType="Long">
        delete from sys_ad_banner where id = #{id}
    </delete>

    <delete id="deleteAdBannerByIds" parameterType="String">
        delete from sys_ad_banner where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="changeStatus">
        update sys_ad_banner set status = #{status} where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>